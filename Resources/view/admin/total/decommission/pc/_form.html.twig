{% trans_default_domain 'orders-order.admin' %}

{% set arr_property = card.categorySectionField %}

<div class="modal-dialog modal-dialog-centered" style="max-width: 780px;">

    {{ form_start(form) }}

    <div class="modal-content p-3 border-bottom border-5 border-primary">

        <div class="modal-header d-flex justify-content-between">
            <h5 class="modal-title">
                {{ 'page.decommission'|trans }}
            </h5>

            <div class="w-25 d-flex gap-3 align-items-center">
                {{ form_widget(form.invariable.number) }}

                <div class="d-flex align-items-center gap-1 text-primary pointer copy small"
                     data-copy="{{ form.invariable.number.vars.data }}">

                    <svg version="1.1" xmlns="http://www.w3.org/2000/svg" x="0px" y="0px" width="14"
                         height="14" fill="currentColor" viewBox="0 0 115.77 122.88">
