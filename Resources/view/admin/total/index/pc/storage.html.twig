{# @var item \BaksDev\Products\Stocks\Repository\AllProductStocks\AllProductStocksResult #}

<tr class="vertical-middle">

    <td class="text-nowrap">
        {# Пользовательское меню #}
        {% if app.user.profile == item.usersProfileId %}
            {# Пользовательское меню #}
            {{ include(_self|replace({ "storage.html.twig": "_usecase.html.twig" })) }}
        {% else %}
            <button
                    data-href="{{ path('products-stocks:admin.moving.new') }}"
                    class="btn moving"
                    data-bs-toggle="modal"
                    data-bs-target="#modal"
                    data-pre-product="{{ item.productId }}"
                    data-pre-offer="{{ item.productOfferConst }}"
                    data-pre-variation="{{ item.productVariationConst }}"
                    data-pre-modification="{{ item.productModificationConst }}"
                    data-target-warehouse="{{ item.usersProfileId }}"
                    data-destination-warehouse="{{ app.user.profile }}"
                    data-method="post"
                    data-formname="moving_product_stock_form"
                    data-post-class="add-one-to-collection"
            >
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left-right" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M1 11.5a.5.5 0 0 0 .5.5h11.793l-3.147 3.146a.5.5 0 0 0 .708.708l4-4a.5.5 0 0 0 0-.708l-4-4a.5.5 0 0 0-.708.708L13.293 11H1.5a.5.5 0 0 0-.5.5m14-7a.5.5 0 0 1-.5.5H2.707l3.147 3.146a.5.5 0 1 1-.708.708l-4-4a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 4H14.5a.5.5 0 0 1 .5.5"/>
                </svg>
            </button>
        {% endif %}
    </td>

    <td>
        <div class="d-flex align-items-center gap-3">

            {% if item.stockPriority %}
                <span
                        role="tooltip"
                        data-bs-toggle="tooltip"
                        data-bs-placement="bottom"
                        data-bs-delay='{"show":600,"hide":100}'
                        title='Место с высоким приоритетом списания'
                >
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                         class="bi bi-exclamation-circle-fill text-danger" viewBox="0 0 16 16">
                        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0M8 4a.905.905 0 0 0-.9.995l.35 3.507a.552.552 0 0 0 1.1 0l.35-3.507A.905.905 0 0 0 8 4m.002 6a1 1 0 1 0 0 2 1 1 0 0 0 0-2"/>
                    </svg>
                </span>
            {% endif %}

            <div
                    {{ item.usersProfileLocation ? 'style="cursor: help;"' }}
                    class="p-1 text-nowrap"
                    role="tooltip"
                    data-bs-toggle="tooltip"
                    data-bs-placement="bottom"
                    data-bs-delay='{"show":300,"hide":600}'
                    title="{{ item.usersProfileLocation }}"
            >
                {{ item.usersProfileUsername }}
            </div>
        </div>

    </td>

    <td class="text-nowrap text-danger">
        {% if item.stockComment %}
            <div class="text-danger d-flex align-items-center gap-1">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none"
                     xmlns="http://www.w3.org/2000/svg">
                    <path opacity="0.3"
                          d="M20 3H4C2.89543 3 2 3.89543 2 5V16C2 17.1046 2.89543 18 4 18H4.5C5.05228 18 5.5 18.4477 5.5 19V21.5052C5.5 22.1441 6.21212 22.5253 6.74376 22.1708L11.4885 19.0077C12.4741 18.3506 13.6321 18 14.8167 18H20C21.1046 18 22 17.1046 22 16V5C22 3.89543 21.1046 3 20 3Z"
                          fill="currentColor"></path>
                    <rect x="6" y="12" width="7" height="2" rx="1"
                          fill="currentColor"></rect>
                    <rect x="6" y="7" width="12" height="2" rx="1"
                          fill="currentColor"></rect>
                </svg>

                {{ item.stockComment }}
            </div>
        {% endif %}
    </td>

    <td class="text-center">
        {{ item.stockTotal }}
    </td>

    <td class="text-center">
        {{ item.stockStorage }}
    </td>

    <td class="text-center">

        {% if item.stockReserve %}

            {% set alert = item.stockReserve > item.stockTotal %}

            <span
                    class="pointer {{ alert ? 'badge text-bg-danger' }}"
                    role="tooltip"
                    data-bs-toggle="tooltip"
                    data-bs-placement="bottom"
                    data-bs-delay='{"show":600,"hide":100}'
                    title='{{ alert ? 'Резерв превышает наличие! Требуется перемещение либо приход.' }}'
            >
                {{ item.stockReserve }}
            </span>
        {% else %}
            -
        {% endif %}

    </td>


    <td class="text-center">

        {% if item.stockTotal >= item.stockReserve %}
            {{ item.stockTotal - item.stockReserve }}
        {% else %}
            <span
                    class="pointer badge text-bg-danger"
                    role="tooltip"
                    data-bs-toggle="tooltip"
                    data-bs-placement="bottom"
                    data-bs-delay='{"show":600,"hide":100}'
                    title='Ожидается поступление'
            > {{ item.stockTotal - item.stockReserve }}
        </span>
        {% endif %}

    </td>

</tr>