{% trans_default_domain('admin.product.stock') %}
<main class="main ">
	
	<section class="container px-4 mb-5">
		
		<div class="mt-3 d-flex justify-content-between">
			{{ include(_self|replace({ "content.html.twig": "_breadcrumb.html.twig" })) }}
		</div>
		
		<div class="d-flex justify-content-between align-items-center mb-3">
			
			<div class="w-100">
				<h1 class="h4 text-uppercase fw-bolder mb-0">
					{{ 'admin.page.index'|trans }}
					
					
					{# Обновить #}
					<a href="/refresh" class="btn  btn-link text-muted">
						<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor"
								class="mb-1" viewBox="0 0 16 16">
							<path fill-rule="evenodd"
									d="M8 3a5 5 0 1 0 4.546 2.914.5.5 0 0 1 .908-.417A6 6 0 1 1 8 2v1z"></path>
							<path d="M8 4.466V.534a.25.25 0 0 1 .41-.192l2.36 1.966c.12.1.12.284 0 .384L8.41 4.658A.25.25 0 0 1 8 4.466z"></path>
						</svg>
					</a>
				</h1>
			</div>
			
			
			<div class="w-100 d-flex align-items-center gap-3 justify-content-end">
				
				{% if is_granted('ROLE_PRODUCT_NEW') %}
					{% if is_granted('ROLE_PRODUCT_STOCKS_INCOMING') or is_granted('ROLE_ADMIN') %}
						<a href="{{ path('ProductStocks:admin.purchase.new') }}"
						   class="btn btn-danger modal-link"
						   data-bs-toggle="modal"
						   data-bs-target="#modal"
						   title="Добавить закупку">
							{{ 'Добавить закупку'|trans({}, 'messages') }}
						</a>
					{% endif %}
				{% endif %}


				<a href="{{ path('ProductStocks:admin.purchase.index') }}"
				   class="btn btn-light"
				   data-bs-toggle="tooltip"
				   data-bs-placement="bottom"
				   title="Список закупок продукции"
				>
					<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-journal-plus" viewBox="0 0 16 16">
						<path fill-rule="evenodd" d="M8 5.5a.5.5 0 0 1 .5.5v1.5H10a.5.5 0 0 1 0 1H8.5V10a.5.5 0 0 1-1 0V8.5H6a.5.5 0 0 1 0-1h1.5V6a.5.5 0 0 1 .5-.5z"></path>
						<path d="M3 0h10a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2v-1h1v1a1 1 0 0 0 1 1h10a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H3a1 1 0 0 0-1 1v1H1V2a2 2 0 0 1 2-2z"></path>
						<path d="M1 5v-.5a.5.5 0 0 1 1 0V5h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1H1zm0 3v-.5a.5.5 0 0 1 1 0V8h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1H1zm0 3v-.5a.5.5 0 0 1 1 0v.5h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1H1z"></path>
					</svg>
				</a>


			</div>
			
			{# Добавить #}
			{# {% if is_granted(ROLE~'_NEW') or is_granted('ROLE_ADMIN') %}
				<a href="{{ path('ProfileType:admin.newedit.new') }}" class="btn btn-danger fw-bolder">
					{{ 'btn.new'|trans({}, 'core.btn') }}
				</a>
			{% endif %} #}
		
		
		</div>
		
		<div class="border border-light rounded-4 p-3">
			
			{# ПОИСК #}
			<div class="col-3">

				{% include Template('/_includes/'~baks_settings.device~'/search.html.twig') %}
			</div>
			
			<table class="table table-striped table-borderless mt-3"
					style='--bs-table-striped-bg: rgba(249,249,249,0.7);'>
				<thead>
				<tr>
					<th>#</th>
					<th>Продукция</th>
					<th class="text-center">Категория</th>
					<th class="text-center">Склад</th>
					<th class="text-center">Количество</th>
				</tr>
				</thead>
				<tbody>
				
				{% for item in query.data %}
					{{ include(_self|replace({ "content.html.twig": "card.html.twig" })) }}
				{% endfor %}
				
				
				</tbody>
			</table>
	
			{% include Template('_includes/'~baks_settings.device~'/pagination.html.twig') with { 'pagination' : query } %}
		
		</div>
	
	</section>

</main>