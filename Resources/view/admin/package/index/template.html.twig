{% trans_default_domain('admin.product.stock') %}

{% set ROLE = 'ROLE_MATERIAL_STOCK_PACKAGE' %}

{# ---- CSS ------------------------------------------------------------ #}
{% block title %}
    {{ 'admin.page.package'|trans }}
{% endblock %}

{# ---- ШАБЛОН ------------------------------------------------------------ #}
{% extends Template('/admin/base.html.twig') %}

{# ---- CSS ------------------------------------------------------------ #}
{% block stylesheets %}
    <link href="/assets/plugins/nice-select2/nice-select2.min.css" rel="stylesheet" type="text/css">
{% endblock %}


{# ---- КОНТЕНТ-БЛОК ------------------------------------------------------------ #}
{% block content %}
    {{ include(_self|replace({ "template.html.twig": baks_settings.device~"/content.html.twig" })) }}
{% endblock %}


{% block javascript %}

<script async nonce="{{ csp_nonce() }}" data-src="/assets/plugins/nice-select2/nice-select2.min.js?v={{ version }}" class="lazy"></script>

<script async nonce="{{ csp_nonce() }}" data-src="/assets/products_stocks/moving{{ app.environment != 'dev'?'.min' }}.js?v={{ version }}" class="lazy"></script>

<script nonce="{{ csp_nonce() }}">
document.addEventListener("DOMContentLoaded", (event) => {
	document.getElementById('products_stocks_filter_form_warehouse').addEventListener("change", (event) => {
	     document.forms.products_stocks_filter_form.submit();
	});
});
</script>

{% endblock %}
